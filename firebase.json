{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "www.nightlife-zagreb.com",
        "destination": "https://nightlife-zagreb.com",
        "type": 301
      }
    ]
  }
}